<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="com.cdac.firsthbmapp.dto">
	<class name="Employee" table="emp" >
		<id name="empId" column="emp_id" ></id>
		<property name="empName" column="emp_name" ></property>
		<property name="basicSalary" column="basic_salary" ></property>
		<property name="hireDate" column="hire_date" type="date" ></property>
	</class>

</hibernate-mapping>